@model LF.Application.ViewModels.LancamentoFinanceiroVM

@{
    ViewData["Title"] = "VisualizarLancamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Visualizar Lançamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataHora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataHora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="EditarLancamento" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="ConsultarLancamento" class="btn btn-primary">Voltar</a>
</div>
